<h1>Job History</h1>
<% if current_user %>

<% if @job_logs.empty? %>
Empty job history
<% else %>
  <table>
    <tr>
      <th>Name</th>
      <th>Datetime ran</th>
      <th>Ran Successfully?</th>
    </tr>
  <% @job_logs.each do |log| %>
    <tr>
      <td><%= log.name %></td>
      <td><%= log.created_at %></td>
      <td><%= log.success %></td>
    </tr>
    <% end %>
  </table>
<% end %>

<% else %>
Not logged in
<% end %>

<p><%= link_to "Back", root_path %></p>