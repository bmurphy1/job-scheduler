<h1>Background Tasker</h1>
<% if current_user %>
  <h3> Hello, <%= current_user.email %></h3>
  <a href="/logout">Logout</a>
  <% else %>
<a href="/login">Login</a>
<% end %>

<div class="scheduled_jobs">
  <table>
    <tr>
      <th>Name</th>
      <th>Schedule</th>
    </tr>
    <% @scheduled_jobs.each do |job| %>
    <tr><td><%= link_to job.name, jobs_path(job) %>
      <td><%= link_to job.schedule.name, schedule_path(job.schedule) %></td>
    </tr>
    <% end %>
  </table>
</div>

<p>
  <%= link_to 'Jobs', jobs_path %>
</p>

<p>
  <%= link_to 'Job History', job_logs_path %>
</p>