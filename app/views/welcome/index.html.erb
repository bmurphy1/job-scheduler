<% if current_user %>
<div class="scheduled_jobs">
  <% if @scheduled_jobs.nil? %>
  p  @scheduled_jobs
  No scheduled jobs
  <% else %>
  <h3> Scheduled Jobs</h3>
  <table>
    <tr>
      <th>Name</th>
      <th>Schedule</th>
    </tr>
    <% @scheduled_jobs.each do |job| %>
    <tr>
      <td><%= link_to job.name, job_path(job) %>
        <td><%= link_to job.schedule.name, schedule_path(job.schedule) %></td>
      </tr>
      <% end %>
    </table>
    <% end %>
  </div>

  <p>
    <%= link_to 'Jobs', jobs_path %>
  </p>
  <p><%= link_to 'Schedules', schedules_path %></p>

  <p>
    <%= link_to 'Job Log', job_logs_path %>
  </p>

  <% else %>
  Not logged in
  <% end %>