<%= form_for(:session,
              url: sessions_path,
              :html => {:class => "new_session"}) do |f| %>
              <h2>Log In</h2>
              <p class="form">
                <p>
                <%= f.label(:email, "Email") %>
                <%= f.text_field(:email) %></p>

                <p>
                  <%= f.label(:password, "Password") %>
                  <%= f.password_field(:password) %></p>

                  <%= f.submit("Log In") %>
                </p>
                  <% end %>
